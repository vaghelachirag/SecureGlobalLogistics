<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="pickupDetail"
            type="com.app.secureglobal.viewmodel.DetailViewModel"  />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_Gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/_4sdp"
        android:paddingEnd="@dimen/_4sdp"
        tools:context=".view.surveyDetails.FragmentSurveyDetails">

        <LinearLayout
            android:id="@+id/ll_Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <include   android:id="@+id/layout_detail" layout="@layout/layout_activity_header" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardBackgroundColor="@color/white"
            card_view:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@+id/ll_Header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <include
                android:id="@+id/pickupDocket"
                layout="@layout/ll_pickup_docket" />

        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@+id/card_view"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

            <com.app.secureglobal.widget.HeaderText
                android:id="@+id/txtNeighbourChecOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup Information"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                tools:ignore="MissingConstraints">

            </com.app.secureglobal.widget.HeaderText>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inpSglNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/txtNeighbourChecOne"
                android:layout_marginTop="@dimen/_5sdp"
                app:hintTextColor="@color/main_bg"
                app:passwordToggleEnabled="false"
                android:background="@color/white"
                tools:ignore="MissingClass,MissingConstraints">

                <com.app.secureglobal.widget.TypefaceEditText
                    android:id="@+id/edt_SglNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_size"
                    android:hint="@string/sglno"
                    android:imeOptions="actionNext"
                    android:text="@={pickupDetail.senderNo}"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_323232"
                    android:textSize="@dimen/verificationDetailTextSize"
                    app:custom_font="@string/app_font_regular" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inpSenderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/txtNeighbourChecOne"
                android:layout_marginTop="@dimen/_5sdp"
                app:hintTextColor="@color/main_bg"
                app:passwordToggleEnabled="false"
                android:background="@color/white"
                tools:ignore="MissingClass,MissingConstraints">

                <com.app.secureglobal.widget.TypefaceEditText
                    android:id="@+id/edt_SenderName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_size"
                    android:hint="@string/sglname"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:text="@={pickupDetail.senderName}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_323232"
                    android:textSize="@dimen/verificationDetailTextSize"
                    app:custom_font="@string/app_font_regular" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inpSenderNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/txtNeighbourChecOne"
                android:layout_marginTop="@dimen/_5sdp"
                app:hintTextColor="@color/main_bg"
                app:passwordToggleEnabled="false"
                android:background="@color/white"
                tools:ignore="MissingClass,MissingConstraints">

                <com.app.secureglobal.widget.TypefaceEditText
                    android:id="@+id/edt_SenderNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_size"
                    android:hint="@string/sglnumber"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:text="@={pickupDetail.senderNumber}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_323232"
                    android:textSize="@dimen/verificationDetailTextSize"
                    app:custom_font="@string/app_font_regular" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:onClick="@{(view) -> pickupDetail.onSaveClicked()}"
                android:text="Save"
                android:textColor="@color/white"
                app:backgroundTint="@color/main_bg" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>